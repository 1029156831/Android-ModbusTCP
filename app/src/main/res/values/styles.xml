<resources>
    <!--Toolbar样式-->
    <style name="CustomToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColor">@color/blue0075F6</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/alihyaihei</item>
    </style>

    <!--登录页面标题样式-->
    <style name="login_title" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColor">@color/blue0075F6</item>
        <item name="android:textSize">36sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/alimamashuheiti_bold</item>
    </style>

    <!--按钮字体样式-->
    <style name="puhuiti_bold" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:fontFamily">@font/alibaba_puhuiti_bold</item>
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">2dp</item>
    </style>

    <style name="pingfang_bold" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:fontFamily">@font/pingfangregular</item>
        <item name="android:textColor">#FF000000</item><!--黑色#FF000000-->
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">1dp</item>
    </style>

    <!--表格字体样式-->
    <style name="alimamafangyuan_bold" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:fontFamily">@font/alimamafangyuantivf_thin</item>
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">1dp</item>
    </style>

    <style name="alimamashuheiti_bold" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:fontFamily">@font/alimamashuheiti_bold</item>
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">1dp</item>
    </style>
</resources>

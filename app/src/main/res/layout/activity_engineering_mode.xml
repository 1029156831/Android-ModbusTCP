<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Engineering_mode_Activity"
    android:background="@color/whiteF4F8FB">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextAppearance="@style/CustomToolbar"
        app:title="掘进机工厂调试模式"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/Theme.Design.Light"
        app:navigationIcon="@drawable/goback"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:backgroundTint="@color/whiteF4F8FB">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/communication_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通信地址"
                android:textSize="12sp"
                android:textColor="@color/ltgray989999"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="20dp"
                style="@style/puhuiti_bold"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_below="@+id/communication_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:id="@+id/linearLayout_IP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:background="@color/whiteF4F8FB"
                    android:focusable="true"
                    android:focusableInTouchMode="true">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IP:"
                        android:layout_gravity="center_vertical"
                        android:textSize="18sp"
                        style="@style/puhuiti_bold"/>

                    <EditText
                        android:id="@+id/input_IP"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="3"
                        android:hint="192.168.1.10"
                        android:inputType="text"
                        style="@style/puhuiti_bold"
                        android:focusable="false"
                        android:focusableInTouchMode="false"/>

                    <!--                android:textCursorDrawable="@drawable/cursor_color"-->
                    <!--                android:background="@drawable/edittext_background"-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="端口:"
                        android:layout_gravity="center_vertical"
                        android:textSize="18sp"
                        style="@style/puhuiti_bold"/>

                    <EditText
                        android:id="@+id/input_port"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:hint="503"
                        android:inputType="number"
                        tools:ignore="TouchTargetSizeCheck"
                        style="@style/puhuiti_bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="从站ID:"
                        android:layout_gravity="center_vertical"
                        android:textSize="18sp"
                        style="@style/puhuiti_bold"/>

                    <EditText
                        android:id="@+id/input_slave_address"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="0.6"
                        android:hint="1"
                        android:inputType="number"
                        tools:ignore="TouchTargetSizeCheck"
                        style="@style/puhuiti_bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/linearLayout_port"
                android:layout_below="@id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="@color/whiteF4F8FB">

                <info.hoang8f.widget.FButton
                    android:id="@+id/button_connect"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="连接"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/blue0075F6"
                    style="@style/puhuiti_bold"/>

                <info.hoang8f.widget.FButton
                    android:id="@+id/button_disconnect"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="断开"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/blue0075F6"
                    style="@style/puhuiti_bold"/>

                <info.hoang8f.widget.FButton
                    android:id="@+id/button_start_readMB"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text=" 开始读取"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/blue0075F6"
                    android:drawableLeft="@drawable/start"
                    android:layout_weight="1"
                    style="@style/puhuiti_bold"/>

                <info.hoang8f.widget.FButton
                    android:id="@+id/button_stop_readMB"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="停止读取"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/blue0075F6"
                    android:drawableLeft="@drawable/stop"
                    android:layout_weight="1"
                    style="@style/puhuiti_bold"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_viewPager"
                android:layout_below="@id/linearLayout_port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/whiteF4F8FB"
                    android:contentDescription="切换视图"/>

                <!--layout_height="1600dp是为了适配固定页面组件高度,当第二页面发生改变时此处需要更改-->
                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_below="@id/tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="视图页面"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
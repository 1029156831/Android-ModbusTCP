<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout_viewPager">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayout_data_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/whiteF4F8FB"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/data_display_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="数据展示区域"
                    android:textColor="@color/ltgray989999"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="20dp"
                    style="@style/puhuiti_bold"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_search_input"
                android:layout_below="@+id/linearLayout_data_display"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_data_display_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical">

                        <ImageButton
                            android:id="@+id/imagebutton_clean"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="0dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/clean"
                            tools:ignore="TouchTargetSizeCheck"
                            android:contentDescription="清除数据"/>
                        <!-- 输入框 -->

                        <EditText
                            android:id="@+id/search_input"
                            style="@style/puhuiti_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_alignParentStart="true"
                            android:hint="输入搜索功能名称"
                            android:textSize="12sp"
                            tools:ignore="TouchTargetSizeCheck" />

                        <ImageButton
                            android:id="@+id/imagebutton_select"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="10dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/select"
                            tools:ignore="TouchTargetSizeCheck"
                            android:contentDescription="选择图标" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/container"
                android:layout_below="@id/linearLayout_search_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/edittext_background">
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>


</FrameLayout>
